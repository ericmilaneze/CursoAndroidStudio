<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="signos.cursoandroid.com.somdosbichos.MainActivity"
    android:background="#F5E9B9">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:id="@+id/imageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/gato"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:id="@+id/ivGatoId"
        android:layout_alignTop="@+id/ivCaoId"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/leao"
        android:layout_below="@+id/ivCaoId"
        android:layout_alignLeft="@+id/ivCaoId"
        android:layout_alignStart="@+id/ivCaoId"
        android:layout_marginTop="39dp"
        android:id="@+id/ivLeaoId" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/macaco"
        android:id="@+id/ivMacacoId"
        android:layout_alignBottom="@+id/ivLeaoId"
        android:layout_alignRight="@+id/ivGatoId"
        android:layout_alignEnd="@+id/ivGatoId" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ovelha"
        android:layout_below="@+id/ivLeaoId"
        android:layout_alignLeft="@+id/ivLeaoId"
        android:layout_alignStart="@+id/ivLeaoId"
        android:layout_marginTop="27dp"
        android:id="@+id/ivOvelhaId" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/vaca"
        android:layout_alignTop="@+id/ivOvelhaId"
        android:layout_alignRight="@+id/ivMacacoId"
        android:layout_alignEnd="@+id/ivMacacoId"
        android:id="@+id/ivVacaId" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cao"
        android:layout_marginTop="22dp"
        android:id="@+id/ivCaoId"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
